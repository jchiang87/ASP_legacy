import os
Import('baseEnv')
Import('listFiles')
progEnv = baseEnv.Clone()

progEnv.Tool('registerTargets', package='drpMonitoring',
             data=listFiles(['data/*']),
             wrappedPython=listFiles(['python/*.py']) )

