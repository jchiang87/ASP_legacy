<?xml version="1.0" encoding="UTF-8"?>
<pipeline
   xmlns="http://glast-ground.slac.stanford.edu/pipeline"
   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
   xsi:schemaLocation="http://glast-ground.slac.stanford.edu/pipeline http://glast-ground.slac.stanford.edu/pipeline/schemas/2.0/pipeline.xsd">
<!-- $Header$
-->
<task>
   <name>GRB_afterglow</name>
   <version>
      <major>1</major>
      <minor>2</minor>
   </version>
   <type>Data</type>
   <notation> </notation>
   <prerequisites>
      <prerequisite name="output_dir" type="string"/>
      <prerequisite name="GRB_parfile" type="string"/>
      <prerequisite name="PYASPROOT" type="string"/>
   </prerequisites>
   <process name="afterglowData" type="batch">
      <variables>
         <var name="OUTPUTDIR">${output_dir}</var>
         <var name="GRBPARS">${GRB_parfile}</var>
      </variables>
      <job executable="${PYASPROOT}/python/afterglowData.sh" maxCPU="600">
      </job>
   </process>
   <process name="afterglowExposures" type="batch">
      <variables>
         <var name="OUTPUTDIR">${output_dir}</var>
         <var name="GRBPARS">${GRB_parfile}</var>
      </variables>
      <job executable="${PYASPROOT}/python/afterglowExposures.sh" maxCPU="20000">
      </job>
      <depends>
          <after process="afterglowData" status="SUCCESS"/>
      </depends>
   </process>
   <process name="afterglowAnalysis" type="batch">
      <variables>
         <var name="OUTPUTDIR">${output_dir}</var>
         <var name="GRBPARS">${GRB_parfile}</var>
      </variables>
      <job executable="${PYASPROOT}/python/afterglowAnalysis.sh" maxCPU="600">
      </job>
      <depends>
          <after process="afterglowExposures" status="SUCCESS"/>
      </depends>
   </process>
</task>
</pipeline>
